{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node", // EKLENDİ
    "allowSyntheticDefaultImports": true, // EKLENDİ
    "esModuleInterop": true, // EKLENDİ
    "types": ["react", "react-native"], // EKLENDİ
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
